#save-schedule-modal.modal.fade aria-hidden="true" aria-labelledby="course-title" role="dialog" tabindex="-1" 
  .modal-dialog
    .modal-content
      .modal-header
        h4 Save Schedule
      .modal-body
        .form-group
          label.control-label for="name"  Name:
          input#name.form-control type="text"
      .modal-footer
        button.btn.btn-default data-dismiss="modal" type="button"  Close
        button.btn.btn-primary#save-schedule type="button"  Save Schedule
#load-schedules-modal.modal.fade aria-hidden="true" aria-labelledby="course-title" role="dialog" tabindex="-1" 
  .modal-dialog
    .modal-content
      .modal-header
        h4 Load Schedules
      .modal-body
        .schedules
      .modal-footer
        button.btn.btn-default data-dismiss="modal" type="button"  Close
        button.btn.btn-primary#load-selected-schedules type="button"  Load
#course-modal.modal.fade aria-hidden="true" aria-labelledby="course-title" role="dialog" tabindex="-1" 
  .modal-dialog
    .modal-content
      .modal-header
        h4#course-title
      .modal-body
        h4#lecture-header Lectures
        button.btn.btn-primary#select-all-lec type="button"  Select All
        .lectures
        h4#discussion-header Discussions
        button.btn.btn-primary#select-all-dis type="button"  Select All
        .discussions
        h4#laboratory-header Laboratories
        button.btn.btn-primary#select-all-lab type="button"  Select All
        .laboratories
      .modal-footer
        button.btn.btn-default#close-selection data-dismiss="modal" type="button"  Close
        button.btn.btn-primary#save-selection type="button"  Save Changes
#generate-modal.modal.fade aria-hidden="true" aria-labelledby="course-title" role="dialog" tabindex="-1"
    .modal-dialog
      .modal-content
        .modal-header
          h4 Any preferences?
        .modal-body
          .preferences
            input type="checkbox" id="mornings"
            span No morning classes (before 10am)
            br
            input type="checkbox" id="evenings"
            span No evening classes (after 5pm)
            br
            input type="checkbox" id="lunch"
            span Time for lunch!
            br
            input type="checkbox" id="thirst"
            span A Thirsty Thursday
          .modal-footer
            button.btn.btn-default data-dismiss="modal" type="button"  Close
            button.btn.btn-primary#generate-with-options type="button"  Generate
