- content_for :title, "Browse By Department"
- content_for :page_heading, "Browse By Department"

#department-accordion.panel-group aria-multiselectable="true" role="tablist" 
  .panel.panel-default
    #headingOne.panel-heading role="tab" 
      .panel-title
        a.school-link.collapsed aria-controls="collapseOne" aria-expanded="false" data-parent="#department-accordion" data-toggle="collapse" href="#collapseOne" 
          .dept-block
            span.glyphicon.glyphicon-th-list
          h3.school-title Arts &amp; Sciences Departments
    #collapseOne.panel-collapse.collapse aria-labelledby="headingOne" role="tabpanel" 
      .panel-body
        .row.department-list
          .col-sm-6
            - @artDeps[0].each do |d|
              .dept= link_to d.name, d
          .col-sm-6
            - @artDeps[1].each do |d|
              .dept= link_to d.name, d
